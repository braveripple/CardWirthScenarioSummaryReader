<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>CardWirthScenarioSummaryReader</AssemblyName>
    <Authors>braveripple</Authors>
    <Description>PowerShell module that get CardWirth scenario information from the Summary file in a directory or archive file.</Description>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Copyright>Â© 2021 braveripple.</Copyright>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PowerShellStandard.Library" Version="5.1.0">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Libs\MSFTCompressionCab\Microsoft.Deployment.Compression.dll">
      <Link>Microsoft.Deployment.Compression.dll</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\Libs\MSFTCompressionCab\Microsoft.Deployment.Compression.Cab.dll">
      <Link>Microsoft.Deployment.Compression.Cab.dll</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="..\Libs\SharpZipLib\ICSharpCode.SharpZipLib.dll">
      <Link>ICSharpCode.SharpZipLib.dll</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <Reference Include="CardWirthScenarioSummaryReaderTool">
      <HintPath>..\Libs\CardWirthScenarioSummaryReaderTool\CardWirthScenarioSummaryReaderTool.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <None Update="CardWirthScenarioSummaryReader.dll-Help.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="CardWirthScenarioSummaryReader.format.ps1xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="CardWirthScenarioSummaryReader.psd1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="CardWirthScenarioSummaryReader.psm1">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="CardWirthScenarioSummaryReader.types.ps1xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
